@{
    ViewData["Title"] = "Student Form";
}

<h2>Student Information Form</h2>

<form method="post">
    <label  for="name">Full Name: </label>
    <input type="text" id="name" name="name" value="" placeholder="Full Name"/><br/>

    <label for="id">Student ID: </label>
    <input type="text" id="id" name="id" value="" placeholder="Student ID" /><br/>

    <label for="email">Email: </label>
    <input type="email" id="email" name="email" value="" placeholder="Email" /><br/>
        
    <label>Gender: </label>

    <label for="male">Male</label>
    <input type="radio" id="male" name="gender" value="" />

    <label for="female">Female</label>
    <input type="radio" id="female" name="gender" value="" /><br/>

    <label for="year">Year Level: </label>
    <select id="year" name="year">
        <option value="1">1st year</option>
        <option value="2">2nd year</option>
        <option value="3">3rd year</option>
        <option value="4">4th year</option>
    </select><br/>

    <label for="course">Course: </label>
    <select id="course" name="course">
        <option value="bscs">BSCS</option>
        <option value="bsit">BSIT</option>
        <option value="bsemc">BSEMC</option>
    </select><br/>

    <label for="about">About Me</label>
    <textarea id="about" name="about" cols="50" rows="5"></textarea><br/>
    
    <button id="submit" type="submit">SUBMIT</button>
</form>
